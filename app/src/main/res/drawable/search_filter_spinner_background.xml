<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/standard_button_corner_radius" />
            <stroke
                android:width="2dp"
                android:color="?themeColorSecondary" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/standard_button_corner_radius" />
            <stroke
                android:width="1dp"
                android:color="?themeColorGreyMedium" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>