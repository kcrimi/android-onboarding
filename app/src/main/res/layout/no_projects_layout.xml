<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:padding="@dimen/activity_margin"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_project"
        style="@style/SkStyle.Icon.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_project_image" />

    <TextView
        android:id="@+id/no_projects_title"
        style="@style/SkStyle.Text.Header.H5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_project"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_content_margin_xlarge"
        android:text="@string/no_projects_title" />

    <TextView
        android:id="@+id/no_projects_subtitle"
        style="@style/SkStyle.Text.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_projects_title"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="@string/no_projects_subtitle" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_projects_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/retry_button"
            style="@style/SkStyle.Button.Secondary"
            android:onClick="onResetFilter"
            android:layout_width="wrap_content"
            android:text="Reset Filters" />
    </RelativeLayout>

</RelativeLayout>