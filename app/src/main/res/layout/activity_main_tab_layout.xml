<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_nav_tab_height"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_home_tab_layout_icon_image_view"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="1dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_play" />

    <TextView
        android:id="@+id/view_home_tab_layout_page_title_text_view"
        style="@style/SkStyle.Text.Body4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/nav_bar_button_home"/>
</LinearLayout>