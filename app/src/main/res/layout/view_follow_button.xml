<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/view_follow_button"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_follow_button_follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            tools:src="@drawable/icon_follow_user_white"/>

        <com.skillshare.Skillshare.client.common.component.common.text_view.CustomTextView
            android:id="@+id/view_follow_button_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/standard_horizontal_spacing"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Follow"/>
    </LinearLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/view_follow_button_progress_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/activity_margin"
        android:visibility="gone"
        app:matProg_barColor="?attr/themeColorPrimary"
        app:matProg_barWidth="2dp"
        app:matProg_progressIndeterminate="true"/>
</RelativeLayout>