<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reviews_percent"
            style="@style/SkStyle.Text.Header.H5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            tools:text="98% negative reviews" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                style="@style/SkStyle.Icon.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_positivereviews" />

            <TextView
                android:id="@+id/reviews_positive"
                style="@style/SkStyle.Text.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/line_item_horizontal_margin_small"
                tools:text="24" />

            <ImageView
                style="@style/SkStyle.Icon.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/line_item_horizontal_margin_large"
                android:src="@drawable/icon_negativereviews" />

            <TextView
                android:id="@+id/reviews_negative"
                style="@style/SkStyle.Text.Body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/line_item_horizontal_margin_small"
                tools:text="2" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp">

        <TextView
            style="@style/SkStyle.Text.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testimonials" />

    </LinearLayout>

</LinearLayout>