<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_item_list_toolbar"
        style="@style/SkStyle.Toolbar"
        android:background="@color/white"
        android:elevation="4dp"
        android:title="">

        <TextView
            android:id="@+id/activity_item_list_toolbar_title_text_view"
            style="@style/SkStyle.Text.Header.Toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Completed" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_item_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <include
        android:id="@+id/activity_item_list_empty_view_layout"
        layout="@layout/activity_item_list_empty_page_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>